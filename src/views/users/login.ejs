<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ('../partials/head') %>
</head>

<body>
    <header>
        <%- include ('../partials/header') %>
            <link href="css/styles-login.css" rel="stylesheet">
    </header>

    <main>
        
        <h3 class="forms-subTitle">Ingresar</h3>

        <div class="forms">
            <form action="/login" method="POST">

                <div>
                    <input type="text" name="loginEmail" id="loginEmail" size="40" class="inputText" placeholder="Email"
                    value="<%= locals.oldData ? oldData.loginEmail : null%>" 
                    >
                    <% if (locals.errors && errors.loginEmail) { %>
                        <div class="errorMsg">
                            <%= errors.loginEmail.msg %>
                        </div>
                        <% } %> 

                </div><br>

                <div>
                    <input type="password" name="loginPassword" id="loginPassword" size="40" class="inputText" placeholder="ContraseÃ±a">
                    <% if (locals.errors && errors.loginPassword) { %>
                        <div class="errorMsg">
                            <%= errors.loginPassword.msg %>
                        </div>
                        <% } %> 

                </div><br>

                <div>
                    <label><input type="checkbox" name="remember" id="remember" value="remember">&nbsp;
                        Recordarme</label>
                </div><br>



                <div class="buttonContainer">
                    <button type="submit" class="formsButton">Entrar</button>
                </div>

            </form>
        </div> <br>

        <div class="banner">
            <img src="img/banner-michelin.jpeg" class="bannerDunlop" alt="bannerMichelin">
        </div><br>

    </main>

    <footer>
        <%- include ('../partials/footer') %>
    </footer>



</body>

</html>